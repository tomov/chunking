@article {Ainge2007,
    author = {Ainge, James A. and Tamosiunaite, Minija and Woergoetter, Florentin and Dudchenko, Paul A.},
    title = {Hippocampal CA1 Place Cells Encode Intended Destination on a Maze with Multiple Choice Points},
    volume = {27},
