@article{Solway2014,
    author = {Solway, Alec AND Diuk, Carlos AND C{\'o}rdova, Natalia AND Yee, Debbie AND Barto, Andrew G. AND Niv, Yael AND Botvinick, Matthew M.},
    journal = {PLOS Computational Biology},
    publisher = {Public Library of Science},
